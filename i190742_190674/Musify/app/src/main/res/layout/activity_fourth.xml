<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context=".Fourth">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.9"
        android:background="@color/black">

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:text="Sign Up"
            android:textAllCaps="false"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:gravity="right"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.1"
        android:background="@color/black"
        android:orientation="vertical"
        android:weightSum="1">

        <ImageView
            android:layout_width="248dp"
            android:layout_height="163dp"
            android:layout_weight="0.05"
            android:gravity="center"

            android:src="@drawable/musify"></ImageView>

        <TextView
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:gravity="center"
            android:text="Musify"
            android:textColor="@color/white"
            android:textSize="50dp">

        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="0.5999">
            <LinearLayout
                android:layout_width="20dp"
                android:layout_height="5dp">

            </LinearLayout>
<LinearLayout
    android:layout_width="375dp"
    android:layout_height="40dp"
    android:orientation="horizontal"
    android:background="@drawable/golname"
    android:gravity="right"

    >

    <ImageView
        android:layout_width="91dp"
        android:layout_height="50dp"
        android:src="@drawable/facebook"></ImageView>

    <Button
        android:layout_width="275dp"
        android:layout_height="50dp"
        android:adjustViewBounds="true"
        android:gravity="fill_horizontal"
        android:text="Continue with facebook"
        android:textColor="#4267B2"
        android:textSize="15dp"
        app:backgroundTint="@color/white"
        app:cornerRadius="20dp" />
</LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="vertical">

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="0.5999">
            <LinearLayout
                android:layout_width="20dp"
                android:layout_height="5dp">

            </LinearLayout>
            <LinearLayout
                android:layout_width="375dp"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:background="@drawable/golname"
                android:gravity="right"

                >

                <ImageView
                    android:layout_width="91dp"
                    android:layout_height="40dp"
                    android:src="@drawable/google"></ImageView>

                <Button
                    android:layout_width="275dp"
                    android:layout_height="50dp"
                    android:adjustViewBounds="true"
                    android:gravity="fill_horizontal"
                    android:text="Continue with Google"
                    android:textColor="#DB4437"
                    android:textSize="15dp"
                    app:backgroundTint="@color/white"
                    app:cornerRadius="20dp" />
            </LinearLayout>



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            >
            <Button
                android:layout_width="370dp"
                android:layout_height="50dp"
                android:adjustViewBounds="true"
                android:gravity="center"
                android:text="Create Account"
                android:textColor="#FFC20F"
                android:textSize="15dp"
                app:backgroundTint="@color/white"
                app:cornerRadius="20dp" />


        </LinearLayout>

    </LinearLayout>



    </LinearLayout>