<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    android:weightSum="1"
    tools:context=".Fifth">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="0.1"
    android:orientation="horizontal">
    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:background="@color/black"
        app:srcCompat="@drawable/ic_baseline_menu_24" />
    <LinearLayout
        android:layout_width="290dp"
        android:layout_height="50dp">

    </LinearLayout>

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@color/black"
        android:gravity="right"
        app:srcCompat="@drawable/ic_account" />


</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.12">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=" Playlists"
            android:textColor="@color/white"
            android:textSize="40dp">
        </TextView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="0.1"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="140dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:src="@drawable/playlist">

        </ImageView>
        <ImageView
            android:layout_width="130dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:src="@drawable/playlist">

        </ImageView>
        <ImageView
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:src="@drawable/playlist">

        </ImageView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="0"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button4"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="  Playlist 1"
            android:textAllCaps="false"
            android:textColor="#FFC206"
            android:gravity="left"/>
        <Button
            android:id="@+id/button5"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="  Playlist 2"
            android:textAllCaps="false"
            android:textColor="#FFC206"
            android:gravity="left"/>
        <Button
            android:id="@+id/button6"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="Playlist 3"
            android:textAllCaps="false"
            android:textColor="#FFC206"
            android:gravity="left"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="0.05">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=" Artists"
            android:textColor="@color/white"
            android:textSize="40dp">
        </TextView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_weight="0.1"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="140dp"
            android:layout_height="110dp"
            android:gravity="center"
            android:src="@drawable/atif">

        </ImageView>
        <ImageView
            android:layout_width="130dp"
            android:layout_height="110dp"
            android:gravity="center"
            android:src="@drawable/atif">

        </ImageView>
        <ImageView
            android:layout_width="120dp"
            android:layout_height="110dp"
            android:gravity="center"
            android:src="@drawable/atif">

        </ImageView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button7"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="  Artist 1"
            android:textAllCaps="false"
            android:textColor="#FFC206"
            android:gravity="left"/>
        <Button
            android:id="@+id/button8"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="  Artist 2"
            android:textAllCaps="false"
            android:textColor="#FFC206"
            android:gravity="left"/>
        <Button
            android:id="@+id/button9"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="Artist 3"
            android:textAllCaps="false"
            android:textColor="#FFC206"
            android:gravity="left"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/songname">


            </ImageView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1">
                <TextView
                    android:layout_width="129dp"
                    android:layout_height="50dp"
                    android:text="  Song name"
                    android:textSize="25dp"
                    android:layout_weight="0.3"
                    android:textColor="#FFC206"
                    >
                </TextView>
                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="80dp"
                        android:layout_height="15dp">

                    </LinearLayout>

                    <ImageButton
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"
                        android:background="@color/black"
                        android:src="@drawable/prev">

                    </ImageButton>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="62dp"
                    android:layout_height="50dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="80dp"
                        android:layout_height="1dp">

                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/imageButton8"
                        android:layout_width="110dp"
                        android:layout_height="50dp"
                        android:background="@color/black"
                        android:gravity="left"
                        app:srcCompat="@drawable/play" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="80dp"
                        android:layout_height="5dp">

                    </LinearLayout>

                    <ImageButton
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:background="@color/black"
                        android:gravity="left"
                        android:src="@drawable/next">

                    </ImageButton>


                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.35"
        android:background="#2A2831"
        android:orientation="horizontal"
        android:weightSum="1">
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="110dp"
            android:layout_weight="0.01"
            >
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:weightSum="1"
            android:orientation="vertical"
            >
            <ImageButton
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_weight="0.01"
                android:background="#2A2831"
                android:src="@drawable/like">
            </ImageButton>

            <TextView
                android:layout_width="112dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="Liked"
                android:textColor="@color/white"
                android:textSize="17dp">

            </TextView>

        </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="110dp"
            android:layout_weight="0.03"
            >
            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:weightSum="1"
                android:orientation="vertical"
                >
                <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="60dp"
                    android:layout_weight="0.01"
                    android:background="#2A2831"
                    android:src="@drawable/add">
                </ImageButton>

                <TextView
                    android:layout_width="102dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="Add"
                    android:textColor="@color/white"
                    android:textSize="17dp">

                </TextView>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="110dp"
            android:layout_weight="0.02"
            >
            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:weightSum="1"
                android:orientation="vertical"
                >
                <ImageButton
                    android:layout_width="90dp"
                    android:layout_height="60dp"
                    android:layout_weight="0.01"
                    android:background="#2A2831"
                    android:src="@drawable/dhoondo">
                </ImageButton>

                <TextView
                    android:layout_width="102dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="Search"
                    android:textColor="@color/white"
                    android:textSize="17dp">

                </TextView>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="110dp"
            android:layout_weight="0.03"
            >
            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:weightSum="1"
                android:orientation="vertical"
                >
                <ImageButton
                    android:layout_width="90dp"
                    android:layout_height="60dp"
                    android:layout_weight="0.01"
                    android:background="#2A2831"
                    android:src="@drawable/listen">
                </ImageButton>

                <TextView
                    android:layout_width="102dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="Listen Later"
                    android:textColor="@color/white"
                    android:textSize="16dp">

                </TextView>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>