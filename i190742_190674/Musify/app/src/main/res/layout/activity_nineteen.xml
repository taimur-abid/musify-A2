<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context=".nineteen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="50dp"
            android:layout_height="90dp"
            android:background="@color/black"
            app:srcCompat="@drawable/exit" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=" Listen Later"
            android:textColor="@color/white"
            android:textSize="40dp"
            android:gravity="center">

        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.05"
        android:background="@color/black">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="  2 Options/Right Selected"
            android:textColor="#2A2831"
            android:gravity="center_vertical">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.075"
        android:orientation="horizontal"
        android:weightSum="1"
        android:background="@drawable/selectionoption">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Playlist"
                android:gravity="center"
                android:textSize="20dp">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="0.5">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageButton
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/toggler">
                </ImageButton>

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Menu"
                    android:textSize="20dp"></TextView>
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="15dp">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.14"
        android:weightSum="1">
        <LinearLayout
            android:layout_width="20dp"
            android:layout_height="match_parent">

        </LinearLayout>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/despacitofinal"
            android:layout_weight="0.24">
        </ImageView>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:orientation="vertical"
            android:weightSum="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text=" Song Name"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:layout_weight="0.5"
                android:gravity="center_vertical">
            </TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.3"
                android:weightSum="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="  Artist"
                    android:textColor="#FFC206"
                    android:textSize="20dp"
                    android:layout_weight="0.8"
                    android:gravity="center_vertical">
                </TextView>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="3:01"
                    android:textColor="@color/white"
                    android:layout_weight="0.3"
                    android:gravity="bottom">

                </TextView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.15">
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/black"
                android:text="X"
                android:textSize="20dp"
                android:textAlignment="center"
                android:textColor="@color/white">

            </Button>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.14"
        android:weightSum="1">
        <LinearLayout
            android:layout_width="20dp"
            android:layout_height="match_parent">

        </LinearLayout>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/despacitofinal"
            android:layout_weight="0.24">
        </ImageView>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:orientation="vertical"
            android:weightSum="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text=" Song Name"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:layout_weight="0.5"
                android:gravity="center_vertical">
            </TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.3"
                android:weightSum="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="  Artist"
                    android:textColor="#FFC206"
                    android:textSize="20dp"
                    android:layout_weight="0.8"
                    android:gravity="center_vertical">
                </TextView>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="0:24"
                    android:textColor="@color/white"
                    android:layout_weight="0.3"
                    android:gravity="bottom">
                </TextView>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.15">
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/black"
                android:text="X"
                android:textSize="20dp"
                android:textAlignment="center"
                android:textColor="@color/white">

            </Button>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="0.35">

    </LinearLayout>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:background="#2A2831"
        android:orientation="horizontal"
        android:weightSum="1">
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="110dp"
            android:layout_weight="0.03"
            >
            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:weightSum="1"
                android:orientation="vertical"
                >
                <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="60dp"
                    android:layout_weight="0.01"
                    android:background="#2A2831"
                    android:src="@drawable/like">
                </ImageButton>

                <TextView
                    android:layout_width="112dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="Liked"
                    android:textColor="@color/white"
                    android:textSize="17dp">

                </TextView>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="110dp"
            android:layout_weight="0.03"
            >
            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:weightSum="1"
                android:background="#2A2831"
                android:orientation="vertical"
                >
                <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="60dp"
                    android:layout_weight="0.01"
                    android:background="#2A2831"
                    android:src="@drawable/add">
                </ImageButton>

                <TextView
                    android:layout_width="102dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="Add"
                    android:textColor="@color/white"
                    android:textSize="17dp">

                </TextView>

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="110dp"
            android:layout_weight="0.03"
            >
            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:weightSum="1"
                android:orientation="vertical"
                >
                <ImageButton
                    android:layout_width="90dp"
                    android:layout_height="60dp"
                    android:layout_weight="0.01"
                    android:background="#2A2831"
                    android:src="@drawable/dhoondo">
                </ImageButton>

                <TextView
                    android:layout_width="102dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="Search"
                    android:textColor="@color/white"
                    android:textSize="17dp">

                </TextView>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="110dp"
            android:layout_weight="0.03"
            android:background="@color/black"
            >
            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:weightSum="1"
                android:orientation="vertical"
                android:background="@color/black"
                >
                <ImageButton
                    android:layout_width="90dp"
                    android:layout_height="60dp"
                    android:layout_weight="0.01"
                    android:background="@color/black"
                    android:src="@drawable/listen">
                </ImageButton>

                <TextView
                    android:layout_width="102dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="Listen Later"
                    android:textColor="@color/white"
                    android:textSize="16dp">

                </TextView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:background="@color/black">
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>