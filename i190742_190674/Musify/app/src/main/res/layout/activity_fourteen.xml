<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context=".eleven">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_weight="0.02"
        android:orientation="horizontal"
        >

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:background="@color/black"
            app:srcCompat="@drawable/exit" />
        <TextView
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:text=" Record"
            android:textColor="@color/white"
            android:textSize="40dp"
            android:gravity="center_vertical">
        </TextView>
        <TextView
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:text="Next"
            android:textColor="#FFC206"
            android:textSize="20dp">
        </TextView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/despacitofinal"
            >

        </ImageView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.05"
        android:gravity="center">
<ImageView
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:src="@drawable/progrssbar"
    >

</ImageView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.075">
        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="match_parent">

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="1:00/2:45"
            android:textColor="#FFC206"
            android:gravity="fill_vertical">

        </TextView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.12"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="1">
        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            >
            <ImageView
                android:id="@+id/add"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="18dp"
                android:src="@drawable/pause"
                android:layout_weight="0.5">

            </ImageView>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            >

            <ImageView
                android:id="@+id/play"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:padding="25dp"
                android:src="@drawable/pausing">

            </ImageView>

        </RelativeLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.19">


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:background="#2A2831"
        android:orientation="horizontal"
        android:weightSum="1">
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="110dp"
            android:layout_weight="0.03"
            >
            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:weightSum="1"
                android:orientation="vertical"
                >
                <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="60dp"
                    android:layout_weight="0.01"
                    android:background="#2A2831"
                    android:src="@drawable/like">
                </ImageButton>

                <TextView
                    android:layout_width="112dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="Liked"
                    android:textColor="@color/white"
                    android:textSize="17dp">

                </TextView>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="110dp"
            android:layout_weight="0.03"
            >
            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:weightSum="1"
                android:orientation="vertical"
                >
                <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="60dp"
                    android:layout_weight="0.01"
                    android:background="@color/black"
                    android:src="@drawable/add">
                </ImageButton>

                <TextView
                    android:layout_width="102dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:background="@color/black"
                    android:text="Add"
                    android:textColor="@color/white"
                    android:textSize="17dp">

                </TextView>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="110dp"
            android:layout_weight="0.03"
            >
            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:weightSum="1"
                android:orientation="vertical"
                >
                <ImageButton
                    android:layout_width="90dp"
                    android:layout_height="60dp"
                    android:layout_weight="0.01"
                    android:background="#2A2831"
                    android:src="@drawable/dhoondo">
                </ImageButton>

                <TextView
                    android:layout_width="102dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="Search"
                    android:textColor="@color/white"
                    android:textSize="17dp">

                </TextView>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="110dp"
            android:layout_weight="0.03"
            >
            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:weightSum="1"
                android:orientation="vertical"
                >
                <ImageButton
                    android:layout_width="90dp"
                    android:layout_height="60dp"
                    android:layout_weight="0.01"
                    android:background="#2A2831"
                    android:src="@drawable/listen">
                </ImageButton>

                <TextView
                    android:layout_width="102dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="Listen Later"
                    android:textColor="@color/white"
                    android:textSize="16dp">

                </TextView>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>