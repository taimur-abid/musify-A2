<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:weightSum="1"
    android:orientation="vertical"
    tools:context=".twenty">


    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="0.1"
    android:orientation="horizontal"
    android:gravity="center">

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="50dp"
        android:layout_height="90dp"
        android:background="@color/black"
        app:srcCompat="@drawable/exit" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Liked"
        android:textColor="@color/white"
        android:textSize="40dp"
        android:gravity="center">

    </TextView>

</LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.05"
        android:background="@color/black">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="  2 Options/Left Selected"
            android:textColor="#2A2831"
            android:gravity="center_vertical">
        </TextView>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.075"
        android:orientation="horizontal"
        android:weightSum="1"
        android:background="@drawable/selectionoption">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="0.5">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageButton
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:background="@drawable/toggler">
            </ImageButton>

            <TextView
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Playlist"
                android:textSize="20dp"></TextView>
        </RelativeLayout>

    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Music"
                android:gravity="center"
                android:textSize="20dp">
            </TextView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.02">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.14"
        android:weightSum="1">
        <LinearLayout
            android:layout_width="20dp"
            android:layout_height="match_parent">

        </LinearLayout>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/playlist"
            android:layout_weight="0.24">
        </ImageView>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.65"
            android:orientation="vertical"
            android:weightSum="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text=" Playlist 1"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:layout_weight="0.5"
                android:gravity="center_vertical">
            </TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.3"
                android:weightSum="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="  Artist"
                    android:textColor="#FFC206"
                    android:textSize="20dp"
                    android:layout_weight="0.79"
                    android:gravity="center_vertical">
                </TextView>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Tracks:8"
                    android:textColor="@color/white"
                    android:layout_weight="0.3"
                    android:gravity="bottom">

                </TextView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.05">
            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/black"
                android:textSize="20dp"
                android:src="@drawable/threedots"
                android:textAlignment="center"
                android:textColor="@color/white">

            </ImageButton>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.14"
        android:weightSum="1">
        <LinearLayout
            android:layout_width="20dp"
            android:layout_height="match_parent">

        </LinearLayout>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/playlist"
            android:layout_weight="0.24">
        </ImageView>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.65"
            android:orientation="vertical"
            android:weightSum="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text=" Playlist 2"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:layout_weight="0.5"
                android:gravity="center_vertical">
            </TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.3"
                android:weightSum="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="  Artist"
                    android:textColor="#FFC206"
                    android:textSize="20dp"
                    android:layout_weight="0.79"
                    android:gravity="center_vertical">
                </TextView>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Tracks:3"
                    android:textColor="@color/white"
                    android:layout_weight="0.3"
                    android:gravity="bottom">

                </TextView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.05">
            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/black"
                android:textSize="20dp"
                android:src="@drawable/threedots"
                android:textAlignment="center"
                android:textColor="@color/white">

            </ImageButton>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:background="#2A2831"
        android:orientation="horizontal"
        android:weightSum="1">
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="110dp"
            android:layout_weight="0.03"
            >
            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:weightSum="1"
                android:orientation="vertical"
                >
                <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="60dp"
                    android:layout_weight="0.01"
                    android:background="#2A2831"
                    android:src="@drawable/like">
                </ImageButton>

                <TextView
                    android:layout_width="112dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="Liked"
                    android:textColor="@color/white"
                    android:textSize="17dp">

                </TextView>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="110dp"
            android:layout_weight="0.03"
            >
            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:weightSum="1"
                android:background="#2A2831"
                android:orientation="vertical"
                >
                <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="60dp"
                    android:layout_weight="0.01"
                    android:background="#2A2831"
                    android:src="@drawable/add">
                </ImageButton>

                <TextView
                    android:layout_width="102dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="Add"
                    android:textColor="@color/white"
                    android:textSize="17dp">

                </TextView>

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="110dp"
            android:layout_weight="0.03"
            >
            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:weightSum="1"
                android:orientation="vertical"
                >
                <ImageButton
                    android:layout_width="90dp"
                    android:layout_height="60dp"
                    android:layout_weight="0.01"
                    android:background="#2A2831"
                    android:src="@drawable/dhoondo">
                </ImageButton>

                <TextView
                    android:layout_width="102dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="Search"
                    android:textColor="@color/white"
                    android:textSize="17dp">

                </TextView>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="110dp"
            android:layout_weight="0.03"
            android:background="#2A2831"
            >
            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:weightSum="1"
                android:background="#2A2831"
                android:orientation="vertical"
                >
                <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="60dp"
                    android:layout_weight="0.01"
                    android:background="#2A2831"
                    android:src="@drawable/listen">
                </ImageButton>

                <TextView
                    android:layout_width="102dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:background="#2A2831"
                    android:text="Listen Later"
                    android:textColor="@color/white"
                    android:textSize="16dp">

                </TextView>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>