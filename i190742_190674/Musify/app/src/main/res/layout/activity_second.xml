<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Second"
    android:background="@color/black"
    android:orientation="vertical"
    android:weightSum="1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.9"
        android:background="@color/black">

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign In"
            android:textAllCaps="false"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:gravity="right"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.1"
        android:background="@color/black"
        android:orientation="vertical"
        android:weightSum="1">

        <ImageView
            android:layout_width="248dp"
            android:layout_height="163dp"
            android:layout_weight="0.05"
            android:gravity="center"

            android:src="@drawable/musify"></ImageView>

        <TextView
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:gravity="center"
            android:text="Musify"
            android:textColor="@color/white"
            android:textSize="50dp">

        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="0.025"
            android:gravity="center">


            <EditText
                android:id="@+id/editTextTextPersonName"
                android:background="@drawable/golname"
                android:layout_width="350dp"
                android:layout_height="match_parent"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="  Name"
                android:textColor="#FFC20F"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_weight="0.025">

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="0.025"
            android:gravity="center">


            <EditText
                android:id="@+id/editTextTextEmailAddress"
                android:background="@drawable/golname"
                android:layout_width="350dp"
                android:layout_height="match_parent"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:hint="  Email"
                android:textColor="#FFC20F"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="13dp"
            android:layout_weight="0.025">

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="0.025"
            android:gravity="center">

            <EditText
                android:id="@+id/editTextTextPassword"
                android:layout_width="350dp"
                android:background="@drawable/golname"
                android:layout_height="match_parent"
                android:ems="10"
                android:inputType="textVisiblePassword"
                android:hint="  Password"
                android:textColorHint="#FFC20F"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="17dp"
            android:layout_weight="0">

        </LinearLayout>

        <TextView
            android:layout_width="150dp"
            android:layout_height="39dp"
            android:layout_weight="0"
            android:gravity="center"
            android:text="Gender"
            android:textColor="#FFC20F"
            android:textSize="20dp">

        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center">
            <RelativeLayout
                android:layout_width="60dp"
                android:layout_height="50dp"
                >

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/gendercircle"
                    >
                </ImageView>

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/male_icon">

                </ImageView>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="70dp"
                android:layout_height="50dp">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:src="@drawable/gendercircle">
                </ImageView>

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:src="@drawable/female_icon">

                </ImageView>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="70dp"
                android:layout_height="50dp">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:src="@drawable/gendercircle">
                </ImageView>

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:src="@drawable/prefer_not_to_say_gender">

                </ImageView>

            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="25dp"
                android:layout_height="16dp"
                android:background="@color/white" />
            <LinearLayout
                android:layout_width="20dp"
                android:layout_height="match_parent">

            </LinearLayout>

            <TextView
                android:layout_width="375dp"
                android:layout_height="71dp"
                android:text="I would like to receive your newsletter and other promotional information"
                android:textColor="@color/white"
                android:textSize="18dp">

            </TextView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:layout_weight="0.75"

            >
        <LinearLayout
            android:layout_width="10dp"
            android:layout_height="5dp">

        </LinearLayout>
            <Button
                android:id="@+id/button2"
                android:layout_width="390dp"
                android:layout_height="70dp"
                android:layout_marginBottom="100dp"
                android:text="Sign Up"
                android:textAllCaps="false"
                android:textSize="20sp"
                app:backgroundTint="#FFC20F"
                app:cornerRadius="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:strokeColor="#fff">

            </Button>


        </LinearLayout>


    </LinearLayout>




</LinearLayout>